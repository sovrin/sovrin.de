{
  "compilerOptions": {
    "sourceRoot": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": [
      "esnext"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
